extends ../layouts/default.pug 
include ../mixins/product-item.pug

block title 
    title Trang Chi Tiết Sản Phẩm

block main
    //- section-6
    section.section-6
        .container  
            .section-6__wrap 
                .section-6__images 
                    .section-6__images-main
                        img(src="../assets/images/pro1.jpg", alt="")
                    .section-6__images-thumb 
                        img(src="../assets/images/pro1.jpg", alt="")
                        img(src="../assets/images/pro2.jpg", alt="")
                        img(src="../assets/images/pro3.jpg", alt="")
                        img(src="../assets/images/pro4.jpg", alt="")
                        img(src="../assets/images/pro5.jpg", alt="")

                .section-6__content
                    .breadcrumb 
                        .container 
                            .breadcrumb__wrap 
                                nav.breadcrumb__item 
                                    ul 
                                        li 
                                            a(href="./index.html") Trang Chủ
                                        li 
                                            a(href="#") Chó
                                        li 
                                            a(href="./index.html") Chó nhỏ
                    h1.section-6__title Shiba Inu Màu Nâu Đỏ
                    .section-6__price 12.000.000 VND
                    .section-6__buttons
                        a.button(href="#") Liên hệ
                        a.button-outline(href="#") 
                            i( class="fa-regular fa-comment-dots button-outline--icon-left")
                            |Chat với Monito
                    .section-6__table 
                        table 
                            tbody 
                                tr 
                                    td SKU
                                    td #1000078
                                tr 
                                    td Giống
                                    td Cái
                                tr 
                                    td Tuổi 
                                    td 2 tháng
                                tr 
                                    td Kích thước
                                    td Nhỏ
                                tr 
                                    td Màu sắc
                                    td Nâu đỏ
                                tr 
                                    td Mô tả ngắn
                                    td Giống thuần chủng Shih Tzu. Cấu trúc cơ thể tốt. Với chứng chỉ MKA và Microchip. Cha từ dòng dõi vô địch.
                    .box-share 
                        .box-share__label
                            i(class="fa-solid fa-share-nodes")
                            |Chia sẻ:
                        .box-share__list 
                            a(href="#" target="_blank") 
                                i(class="fa-brands fa-facebook")
                            a(href="#" target="_blank") 
                                i(class="fa-brands fa-square-x-twitter")
                            a(href="#" target="_blank") 
                                i(class="fa-brands fa-instagram")
                            a(href="#" target="_blank") 
                                i(class="fa-brands fa-youtube")
    //-end section-6

